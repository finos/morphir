#!/usr/bin/env bash
#MISE description="Run golangci-lint"
#USAGE name lint
#USAGE bin lint
#USAGE about "Run golangci-lint"
#USAGE usage "mise run lint"

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

"$REPO_ROOT/scripts/lint.sh" "$@"
