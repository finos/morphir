#!/usr/bin/env bash
#MISE description="Run release automation"
#USAGE name release
#USAGE bin release
#USAGE about "Run release automation"
#USAGE usage "mise run release -- vX.Y.Z"
#USAGE arg <version> help="Semver tag like v1.2.3"

set -euo pipefail

SCRIPT_DIR="$(cd \"$(dirname \"${BASH_SOURCE[0]}\")\" && pwd)"
REPO_ROOT="$(cd \"/../..\" && pwd)"

"/scripts/release.sh" "$@"
