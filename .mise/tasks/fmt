#!/usr/bin/env bash
#MISE description="Format Go code"
#USAGE name fmt
#USAGE bin fmt
#USAGE about "Format Go code"
#USAGE usage "mise run fmt"

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

"$REPO_ROOT/scripts/fmt.sh" "$@"
